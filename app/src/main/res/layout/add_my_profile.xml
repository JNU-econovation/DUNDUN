<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mypage_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/mypage_card_profile_size"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/signup_area_margin"
                android:layout_marginTop="48dp"
                android:layout_marginRight="@dimen/signup_area_margin">

                <TextView
                    android:id="@+id/txt_mypage_name"
                    style="@style/Text_body_large_dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="OASISU"
                    android:textAlignment="center"
                    android:textSize="32dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_mypage_profile_img"
                android:layout_width="@dimen/mypage_profile_image_size"
                android:layout_height="@dimen/mypage_profile_image_size"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/base_base_margin"
                app:cardCornerRadius="115dp">

                <ImageView
                    android:id="@+id/img_mypage_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/poster" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/notice_profile_image_size"
                android:layout_marginTop="@dimen/notice_inner_content_margin"
                android:layout_marginRight="@dimen/notice_profile_image_size">

                <TextView
                    android:id="@+id/txt_mypage_description"
                    style="@style/Text_label_large_dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="4"
                    android:text="안녕하세요! 그웁 사운드 오아이수입니다!\n저희는 브리티쉬 POP을 연주합니다.\nasdf\nasdf"
                    android:textAlignment="center"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_write_notice_Delete"
        style="@style/Text_body_large_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sign_select_side_margin"
        android:layout_marginTop="@dimen/signup_side_margin"
        android:layout_marginEnd="@dimen/sign_select_side_margin"
        android:layout_marginBottom="12dp"
        android:background="@drawable/sign_select_shape"
        android:padding="@dimen/sign_select_side_margin"
        android:text="Follow"
        android:textAllCaps="false"
        android:textColor="@color/base_reverse_font_color"
        android:textStyle="bold" />


</LinearLayout>